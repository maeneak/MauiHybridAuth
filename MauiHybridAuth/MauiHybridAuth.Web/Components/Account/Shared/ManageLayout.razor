@inherits LayoutComponentBase
@layout AccountLayout

<MudStack style="width:100%" Row AlignItems="AlignItems.Center" StretchItems="StretchItems.Start" Justify="Justify.SpaceBetween">
    <MudText Typo="Typo.h3" GutterBottom="true">Manage your account</MudText>
    <MudSpacer />
    <a href="/">
        <MudIcon Icon="@Icons.Material.Filled.Close" Size="Size.Large" />
    </a>
</MudStack>
<MudGrid>
    <MudItem md="5">
        <MudText Typo="Typo.h6" GutterBottom="true">Change your account settings</MudText>
        <ManageNavMenu />
    </MudItem>
    <MudItem md="7">
        @Body
    </MudItem>
</MudGrid>
