@using MauiHybridAuth.Web.Data
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> userManager

<MudDataGrid @ref="dataGrid" Items="@userManager.Users" ReadOnly="false" EditMode="DataGridEditMode.Form" EditTrigger="DataGridEditTrigger.OnRowClick"
    CommittedItemChanges="@((ApplicationUser user) => CommittedItemChanges(user))">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Application Users</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.PersonAdd" />
    </ToolBarContent>
    <Columns>
        <PropertyColumn Property="x => x.FirstName" Title="Name" />
        <PropertyColumn Property="x => x.LastName" Title="Surname" />
        <PropertyColumn Property="x => x.Email" Title="Email" />
        <PropertyColumn Property="x => x.UserName" />
        <PropertyColumn Property="x => x.Roles" Title="Roles" />
    </Columns>
</MudDataGrid>

@code {
    MudDataGrid<ApplicationUser> dataGrid;

    void CommittedItemChanges(ApplicationUser item)
    {
        return;
    }

}
